<% provide(:title, "商品情報の編集") %>
<div id="fh5co-portfolio">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@item) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <span class="picture">
            <%= f.label :picture %>　<span class="input-unneed"></span>
            <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'item_picture' %>
            <%= image_tag(@item.picture.thumb200.url) if @item.picture.url.present? %>
            <p></p>
          </span>
          <p></p>
          <div class = 'form-group'>
            <%= f.label :name %>　<span class="input-need"></span>
            <%= f.text_field :name, class: 'form-control', id: 'item_name' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :description %>　<span class="input-unneed"></span>
            <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'item_description' %>
          </div>
          <%= f.submit "更新する", class: "btn btn-primary" %>
          <p></p>
          <%= link_to "商品を削除する", item_path(@item), method: :delete,
                                      data: { confirm: "本当にこの商品を削除してよろしいですか？" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>