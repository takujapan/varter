<% provide(:title, "#{@item.name}") %>
<div class="container">
  <div class="row">
    <h2 class="item-name"><%= @item.name %></h2>
    <div class="change-item">
      <% if current_user == @item.user %>
        <%= link_to "編集", edit_item_path(@item), class: 'edit-item' %>　
      <% end %>
    </div>
    <h4><%= @item.description %></h4>
  </div>
</div>